{
	"name": "nx",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/nx/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/nx",
				"main": "libs/nx/src/index.ts",
				"tsConfig": "libs/nx/tsconfig.lib.json",
				"assets": [
					"libs/nx/*.md",
					{
						"input": "./libs/nx/src",
						"glob": "**/!(*.ts)",
						"output": "./src"
					},
					{
						"input": "./libs/nx/src",
						"glob": "**/*.d.ts",
						"output": "./src"
					},
					{
						"input": "./libs/nx",
						"glob": "generators.json",
						"output": "."
					},
					{
						"input": "./libs/nx",
						"glob": "executors.json",
						"output": "."
					}
				]
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/nx/**/*.ts", "libs/nx/package.json", "libs/nx/executors.json"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/nx/jest.config.ts"
			}
		},
		"release": {
			"executor": "@spartan-ng/tools:build-update-publish",
			"options": {
				"libName": "nx"
			}
		}
	},
	"tags": ["scope:nx"]
}
