{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"types": ["node"],
		"target": "ES2022",
		"useDefineForClassFields": false,
		"resolveJsonModule": true
	},
	"files": ["src/main.ts", "src/main.server.ts"],
	"include": ["src/**/*.d.ts", "src/app/routes/**/*.ts", "src/app/pages/**/*.page.ts"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
